generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model usuarios {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  idYD           String   @unique
  password       String
  bio            String?
  base64         String?
  user_idCentral String?     @unique
  acessos        Json     @db.Json  @default("[]")  // armazena arrays de objetos

  @@map("teste_usuarios")
}
model usuarios_deletados {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  idYD           String   @unique
  password       String
  bio            String?
  base64         String?
  user_idCentral String?     @unique
  acessos        Json     @db.Json  @default("[]")  // armazena arrays de objetos

  @@map("usuarios_deletados")
}


model centrais{
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  device_id       String @unique   
  ipCentralMRD    String
  nomeEdificio    String
  numero          String
  rua             String?
  bairro          String?

  @@map("teste_centrais")
}
model equipamentos{
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  device_id       String @unique
  ip              String
  mac             String
  central_id      String
  device_hostname String?


  @@map("teste_equipamentos")
}
model Logs {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  ip          String
  class       String
  function    String
  process     String
  description String
  datetime    DateTime @default(now())
  @@map("teste_logs")
}

