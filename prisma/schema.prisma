generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL_PROD")
}

model usuarios {
  id                 String       @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  idYD               String       @unique
  password           String
  base64             String?
  acessos            Json         @db.Json  @default("[]")  // armazena arrays de objetos
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt

  @@map("usuarios_2_1")
}
model usuarios_deletados {
  id                  String      @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  idYD                String      @unique
  password            String
  base64              String?
  acessos             Json        @db.Json  @default("[]")  // armazena arrays de objetos

  @@map("usuarios_deletados_2_1")
}


model centrais{
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  device_id       String          @unique   
  ip_local      String
  ip_VPN        String?
  mac           String
  nomeEdificio  String
  numero        String
  rua           String
  bairro        String
  version       String
  status        String? 
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt

  @@map("centrais_2_1")
}
model equipamentos{
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  device_id       String          @unique
  ip              String
  mac             String
  central_id      String
  status          String? 
  device_hostname String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt


  @@map("equipamentos_2_1")
}
model Logs {
  id            String              @id @default(auto()) @map("_id") @db.ObjectId
  ip            String
  class         String
  function      String
  process       String
  description   String
  datetime      DateTime           @default(now())
  @@map("logs_2_1")
}
model administradores {
  id            String              @id @default(auto()) @map("_id") @db.ObjectId
  usuario       String
  senha         String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  @@map("administradores_2_1")
}
