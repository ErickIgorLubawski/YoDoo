generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model usuarios {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  idYD            String   @unique           
  password        String
  begin_time      String
  end_time        String
  acessos         String[]
  bio             String?
  base64          String?
  user_idCentral   Int?     @unique
  @@map("usuarios")
}

model centrais{
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  device_id       String @unique   
  ipCentralMRD    String
  nomeEdificio    String
  numero          String
  rua             String?
  bairro          String?

  @@map("centrais")
}
model equipamentos{
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  device_id       String @unique
  ip              String
  mac             String
  central_id      String @unique
  device_hostname String?


  @@map("equipamentos")
}
model Logs {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  ip          String
  class       String
  function    String
  process     String
  description String
  datetime    DateTime @default(now())
  @@map("logs")
}

