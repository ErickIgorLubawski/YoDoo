// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model usuarios {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  idYD        String   @unique           
  password    String
  begin_time  String
  end_time    String
  acessos     String[]
  bio         String?
  base64      String?

  @@map("usuarios")
}

model centrals{
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  ipCentralMRD    String
  nomeEdificio    String
  numero          String
  rua             String?
  bairro          String?

  @@map("centrals")
}
model equipamentos{
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  device_id       String @unique
  ip              String
  device_hostname String?

  @@map("equipamentos")
}
model Logs {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  class       String
  function    String
  process     String
  description String
  datetime    DateTime @default(now())
  @@map("logs")
}

