generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  idYD        String   @unique           
  password    String
  begin_time  String
  end_time    String
  acessos     String[]
  bio         String?
  base64      String?

  @@map("usuario")
}

model Central{
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  ipCentralMRD    String
  nomeEdificio    String
  numero          String
  rua             String?
  bairro          String?

  @@map("centrals")
}
model Equipamentos{
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  device_id       String @unique
  ip              String
  device_hostname String?

  @@map("equipamentos")
}
